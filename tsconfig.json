{
    "compilerOptions": {
        // Paths
        "paths": {
            "@components/*": [
                "src/components/*"
            ],
            "@single/*": [
                "src/single/*"
            ],
            "@class/*": [
                "src/class/*"
            ],
            "@assets/*": [
                "assets/*"
            ],
            "@routes/*": [
                "src/routes/*"
            ],
            "@data/*": [
                "src/data/*"
            ],
            "@src/*": [
                "src/*"
            ]
        },

        "sourceMap": true,
        "module": "ES2022",
        "target": "ES2022",
        // "moduleResolution": "node",
        "outDir": "./deleteThisDir",
        "rootDir": ".",
        "baseUrl": ".",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        //"skipLibCheck": true,
        "resolveJsonModule": true,
        "noUncheckedIndexedAccess": true,
        "allowSyntheticDefaultImports": true,
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": false, // para eliminar imports vac√≠os

        "useDefineForClassFields": true,

        "allowJs": true,
        "checkJs": true,

        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
        "lib": ["ES2023", "DOM"],
        //"module": "ESNext",

        /* Bundler mode */
        "moduleResolution": "bundler",
        "isolatedModules": true,
        "moduleDetection": "force",

        /* Linting */
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true,
        "noEmit": true,

        "composite": false
    },

    "include": ["src", "src/**/*.ts", "../src/**/*.mts", "src/**/*.js", "src/**/*.svelte"],
    "exclude": ["node_modules", "dist", ".vite", "src/**/*.css"],
}