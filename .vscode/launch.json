{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug All Tests",
            "program": "${workspaceFolder}/buildFiles/jasmineConfig.mjs",
            "runtimeArgs": [
                "--enable-source-maps"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "build-server",
            "console": "integratedTerminal",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.mjs",
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current Test File",
            "program": "${workspaceFolder}/buildFiles/jasmineConfig.mjs",
            "args": [
                "-f",
                "${file}"
            ],
            "runtimeArgs": [
                "--enable-source-maps"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "build-server",
            "console": "integratedTerminal",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.mjs",
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Legacy: Ejecutar tests (pnpm)",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "run",
                "tests:run"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal"
        }
    ]
}